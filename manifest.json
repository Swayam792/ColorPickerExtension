{
    "name": "Color Picker",
    "description": "A color picker extension",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],    
    "action": {
       "default_popup": "popup.html"
    },
    "icons": {
        "48": "/images/image_48.png",
        "64": "/images/image_64.png",
        "16": "/images/image_16.png"
    }
}